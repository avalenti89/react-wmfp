{
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "src",
    "target": "ES2015",
    "lib": ["esnext"],
    "module": "esnext",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"]
}
