{
  "compilerOptions": {
    "outDir": "./build",
    "rootDir": "src",
    "declaration": true,
    "declarationDir": "./build",
    "declarationMap": true,
    "sourceMap": true,
    "target": "ES6",
    "lib": ["esnext"],
    "module": "CommonJS",
    "strict": false,
    "esModuleInterop": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts*"],
  "exclude": ["**/build", "**/node_modules"]
}
